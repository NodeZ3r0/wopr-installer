# ============================================================================
# WOPR Support Plane - Configuration
# Copy to .env and fill in values
# ============================================================================

# Support Gateway
SUPPORT_GW_HOST=127.0.0.1
SUPPORT_GW_PORT=8443
LOG_LEVEL=INFO

# Database (shared by gateway and SSH CA)
DATABASE_URL=postgresql://wopr:changeme@localhost:5432/wopr_support

# Breakglass limits
BREAKGLASS_MAX_MINUTES=30
BREAKGLASS_DEFAULT_MINUTES=15

# SSH CA (internal URL - both services run on same host)
SSH_CA_URL=http://127.0.0.1:9444

# SSH CA Service
SSHCA_HOST=127.0.0.1
SSHCA_PORT=9444
SSHCA_CA_KEY=/etc/wopr-sshca/ca_key
SSHCA_CA_PUB=/etc/wopr-sshca/ca_key.pub
SSHCA_VALIDITY_DIAG=300
SSHCA_VALIDITY_REMEDIATE=600
SSHCA_VALIDITY_BREAKGLASS=1800

# Nebula mesh network
NEBULA_NETWORK=10.0.0.0/8

# CORS (should match your Caddy domain)
CORS_ORIGINS=https://support-gateway.wopr.systems
